<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aircraftwar2024.activity.OfflineActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单机模式游戏难度选择"
        android:textSize="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBaseline_toBaselineOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/normal_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="普通模式"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/easy_mode"
        tools:layout_editor_absoluteX="128dp" />

    <Button
        android:id="@+id/easy_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="简单模式"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:layout_editor_absoluteX="140dp" />

    <Button
        android:id="@+id/tough_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="4dp"
        android:text="困难模式"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/normal_mode"
        tools:layout_editor_absoluteX="128dp" />

</androidx.constraintlayout.widget.ConstraintLayout>